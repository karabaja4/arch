#!/bin/sh

umount /home/igor/_disk > /dev/null 2>&1
umount /home/igor/_mmc > /dev/null 2>&1
umount /home/igor/_private > /dev/null 2>&1
umount /home/igor/_public > /dev/null 2>&1
umount /mnt/* > /dev/null 2>&1

profile_backup() {
    tar cf "/home/igor/.config/${1}.tar" -C /tmp/config/ "${1}" || rm "/home/igor/.config/${1}.tar"
}

# backup profiles
printf '%s\n' "Backing up profiles"
profile_backup "chromium"
profile_backup "Code"
printf '%s\n' "done"
