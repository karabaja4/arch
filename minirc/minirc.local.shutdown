#!/bin/sh

# add shutdown commands here

hwclock --systohc

# Windows 7 bug workaround
# Rebooting from Arch to Windows 7 leaves ethernet adapter in an unusuable state
# blacklist r8168 in /etc/modprobe.d/blacklist.conf
# whitelist r8169 in /usr/lib/modprobe.d/r8168-lts.conf (provided by r8168-lts package)
# on boot r8169 is loaded
# on shutdown drop r8169 and modprobe r8168 which leaves the card in a usable state
# r8168 is unstable for normal use (drops when used with VirtualBox)
ifconfig enp2s0 down
modprobe -r r8169
modprobe r8168
