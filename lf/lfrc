# empty open so it navigates but doesnt open anything
cmd open &{{
}}
cmd open2 &{{
    if [ ! -d "$f" ]
    then
        xdg-open "$f" > /dev/null 2>&1
    fi
}}
map o open2
map <enter> :open; open2

cmd cp &{{
    printf "$f" | xclip -i -selection clipboard
}}

cmd term &{{
    xfce4-terminal --working-directory="$PWD" > /dev/null 2>&1
}}
map t term

map <backspace2> updir

map gg
map gt top
map gb bottom

map gd cd ~/_disk/torrents

# archives
# ${f} = current file
# ${fs} = selected file(s)
# ${fx} = selected file(s) or a current file
# set -f = the shell shall disable pathname expansion

cmd gz ${{
    set -f
    for _x in ${fx}
    do
        set -- "${@}" "$(basename "${_x}")"
    done
    tar cvzf "${f}.tar.gz" "${@}"
}}

cmd ex ${{
    set -f
    case "${f}" in
        *.tar.*) tar xvf "${f}";;
        *.7z|*.zip|*.rar) 7z x "${f}";;
    esac
}}

cmd zip ${{
    set -f
    for _x in ${fx}
    do
        set -- "${@}" "$(basename "${_x}")"
    done
    7z a -tzip "${f}.zip" "${@}"
}}

cmd clip ${{
    set -f
    case "${f}" in
        *.png|*.jpg) xclip -selection clipboard -t image/png -i "${f}";;
    esac
}}