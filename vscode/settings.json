// Place your settings in this file to overwrite default and user settings.
{
    "editor.fontFamily": "Consolas",
    "editor.fontSize": 14,
    "editor.letterSpacing": 0,
    "explorer.openEditors.visible": 0,
    "workbench.editor.showTabs": true,
    "workbench.sideBar.location": "right",
    "search.exclude":
    {
        "**/wwwroot": true,
        "**/typings": true,
        "**/out": true,
        "**/cdn": true
    },
    "workbench.editor.enablePreview": true,
    "editor.wordWrap": "off",
    "explorer.autoReveal": true,
    "csharp.suppressDotnetRestoreNotification": true,
    "typescript.referencesCodeLens.enabled": true,
    "omnisharp.projectLoadTimeout": 120,
    "files.exclude":
    {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/bin": true,
        "**/obj": true
    },
    "editor.minimap.enabled": false,
    "git.enableSmartCommit": true,
    "telemetry.telemetryLevel": "off",
    "workbench.colorTheme": "Default Light+",
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    "workbench.iconTheme": "vscode-icon-theme",
    "editor.dragAndDrop": false,
    "window.zoomLevel": 0,
    "workbench.colorCustomizations": {
        "gitDecoration.modifiedResourceForeground": "#FF8C00",
        "gitDecoration.untrackedResourceForeground": "#32CD32"
    },
    "workbench.editor.decorations.colors": false,
    "workbench.editor.decorations.badges": false,
    "explorer.decorations.badges": false,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false
    },
    "gitlens.currentLine.enabled": true,
    "problems.decorations.enabled": false,
    "breadcrumbs.enabled": false,
    "msbuildProjectTools.nuget.newestVersionsFirst": true,
    "explorer.confirmDelete": false,
    "msbuildProjectTools.logging.level": "Verbose",
    "omnisharp.disableMSBuildDiagnosticWarning": true,
    "razor.disabled": true,
    "window.titleBarStyle": "custom",
    "window.restoreWindows": "none",
    "workbench.settings.editor": "json",
    "razor.trace": "Off",
    "debug.console.fontFamily": "Consolas",
    "terminal.external.linuxExec": "xfce4-terminal",
    "terminal.explorerKind": "external",
    "update.mode": "none",
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/lib_bower/*/**": true
    },
    "javascript.updateImportsOnFileMove.enabled": "never",
    "explorer.compactFolders": false,
    "files.associations": {
        "autostart": "shellscript",
        "minirc.conf": "shellscript",
        "inittab": "shellscript",
        "minirc.local": "shellscript",
        "minirc.local.shutdown": "shellscript",
        "rc": "shellscript",
        "aliases": "shellscript"
    },
    "security.workspace.trust.enabled": false,
    "files.hotExit": "off",
    "files.enableTrash": false,
    "github.gitAuthentication": false,
    "editor.semanticHighlighting.enabled": true,
    "git.autofetch": false,
    "gitlens.showWelcomeOnInstall": false,
    "omnisharp.loggingLevel": "critical",
    "workbench.startupEditor": "welcomePage",
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.tabs.enabled": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "shellcheck.customArgs": ["-x"],
    "editor.scrollbar.verticalScrollbarSize": 25,
    "settingsSync.keybindingsPerPlatform": false,
    "git.showActionButton": {
        "commit": false,
        "publish": false,
        "sync": false
    }
}