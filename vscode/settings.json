// Place your settings in this file to overwrite default and user settings.
{
    "editor.fontFamily": "Consolas",
    "editor.fontSize": 14,
    "explorer.openEditors.visible": 0,
    "workbench.editor.showTabs": true,
    "workbench.sideBar.location": "right",
    "search.exclude":
    {
        "**/wwwroot": true,
        "**/typings": true,
        "**/out": true,
        "**/zenite.Web": true,
        "**/cdn": true
    },
    "workbench.editor.enablePreview": true,
    "editor.wordWrap": "off",
    "explorer.autoReveal": true,
    "csharp.suppressDotnetRestoreNotification": true,
    "typescript.referencesCodeLens.enabled": true,
    "omnisharp.projectLoadTimeout": 120,
    "files.exclude":
    {
        "**/node_modules": true,
        "**/bin": true,
        "**/obj": true,
        "*.o": true,
        "moc_*": true
    },
    "editor.minimap.enabled": false,
    "git.enableSmartCommit": true,
    "telemetry.enableTelemetry": false,
    "workbench.colorTheme": "Default Light+",
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    "workbench.iconTheme": "vscode-icon-theme",
    "editor.dragAndDrop": false,
    "window.zoomLevel": 0,
    "workbench.colorCustomizations": {
        "gitDecoration.modifiedResourceForeground": "#FF8C00",
        "gitDecoration.untrackedResourceForeground": "#32CD32"
    },
    "explorer.decorations.badges": false,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true,
        "suppressUpdateNotice": true,
        "suppressWelcomeNotice": true
    },
    "gitlens.currentLine.enabled": false,
    "problems.decorations.enabled": false,
    "breadcrumbs.enabled": false,
    "msbuildProjectTools.nuget.newestVersionsFirst": true,
    "explorer.confirmDelete": false,
    "omnisharp.loggingLevel": "critical",
    "msbuildProjectTools.logging.level": "Error",
    "omnisharp.disableMSBuildDiagnosticWarning": true,
    "razor.disabled": true,
    "window.titleBarStyle": "custom",
    "window.restoreWindows": "none",
    "workbench.settings.editor": "json",
    "razor.trace": "Off",
    "debug.console.fontFamily": "Consolas",
    "terminal.external.linuxExec": "gnome-terminal"
}