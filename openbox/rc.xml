<?xml version="1.0" encoding="UTF-8"?>
<openbox_config xmlns="http://openbox.org/3.4/rc" 
  xmlns:xi="http://www.w3.org/2001/XInclude">

  <resistance>
    <strength>10</strength>
    <screen_edge_strength>20</screen_edge_strength>
  </resistance>

  <focus>
    <focusNew>yes</focusNew>
    <followMouse>no</followMouse>
    <focusLast>yes</focusLast>
    <underMouse>no</underMouse>
    <focusDelay>200</focusDelay>
    <raiseOnFocus>no</raiseOnFocus>
  </focus>

  <placement>
    <policy>Smart</policy>
    <center>yes</center>
    <monitor>Mouse</monitor>
    <primaryMonitor>1</primaryMonitor>
  </placement>

  <theme>
    <name>devbian</name>
    <titleLayout></titleLayout>
    <keepBorder>yes</keepBorder>
    <animateIconify>no</animateIconify>
    <font place="ActiveOnScreenDisplay">
      <name>Roboto</name>
      <size>11</size>
      <weight>Bold</weight>
      <slant>Normal</slant>
    </font>
    <font place="InactiveOnScreenDisplay">
      <name>Roboto</name>
      <size>11</size>
      <weight>Bold</weight>
      <slant>Normal</slant>
    </font>
    <font place="MenuItem">
      <name>Roboto</name>
      <size>9</size>
      <weight>Bold</weight>
      <slant>Normal</slant>
    </font>
  </theme>

  <desktops>
    <number>4</number>
    <firstdesk>1</firstdesk>
    <names></names>
    <popupTime>875</popupTime>
  </desktops>

  <resize>
    <drawContents>yes</drawContents>
    <popupShow>Nonpixel</popupShow>
    <popupPosition>Center</popupPosition>
    <popupFixedPosition>
      <x>10</x>
      <y>10</y>
    </popupFixedPosition>
  </resize>

  <margins>
    <top>0</top>
    <bottom>0</bottom>
    <left>0</left>
    <right>0</right>
  </margins>

  <keyboard>
    <keybind key="W-F4">
      <action name="Close"/>
    </keybind>
    <keybind key="W-C">
      <action name="Close"/>
    </keybind>
    <keybind key="A-Tab">
      <action name="NextWindow">
        <finalactions>
          <action name="Focus"/>
          <action name="Raise"/>
          <action name="Unshade"/>
        </finalactions>
      </action>
    </keybind>
    <keybind key="A-space">
      <action name="ShowMenu"><menu>client-menu</menu></action>
    </keybind>
    <keybind key="W-T">
      <action name="Execute">
        <command>/home/igor/arch/tint2/menu.sh terminal</command>
      </action>
    </keybind>
    <keybind key="W-L">
      <action name="Execute">
        <command>doas /home/igor/arch/scripts/suspend.sh</command>
      </action>
    </keybind>
    <keybind key="W-M">
      <!-- Minimize with Win+M -->
      <action name="Iconify" />
    </keybind>
    <keybind key="Home">
      <!-- Minimize with Home -->
      <action name="Iconify" />
    </keybind>
    <keybind key="Print">
      <!-- Legion 7: Screenshot with top right PrtSc -->
      <action name="Execute">
        <command>/home/igor/arch/scripts/flameshot.sh</command>
      </action>
    </keybind>
    <keybind key="Menu">
      <!-- Logitech MX Keys S: Screenshot with Menu -->
      <action name="Execute">
        <command>/home/igor/arch/scripts/flameshot.sh</command>
      </action>
    </keybind>
    <keybind key="A-Print">
      <!-- Legion 7: Screenshot with top right PrtSc (no convert) -->
      <action name="Execute">
        <command>/home/igor/arch/scripts/flameshot.sh --no-convert</command>
      </action>
    </keybind>
    <keybind key="A-Menu">
      <!-- Logitech MX Keys S: Screenshot with Menu (no convert) -->
      <action name="Execute">
        <command>/home/igor/arch/scripts/flameshot.sh --no-convert</command>
      </action>
    </keybind>
    <keybind key="W-S-XF86Assistant">
      <!-- Legion 7: Loop sound devices -->
      <action name="Execute">
        <command>/home/igor/arch/scripts/sloop.sh</command>
      </action>
    </keybind>
    <keybind key="XF86AudioRaiseVolume">
      <!-- Logitech MX Keys S: Loop sound devices -->
      <action name="Execute">
        <command>/home/igor/arch/scripts/sloop.sh</command>
      </action>
    </keybind>
    <keybind key="W-Q">
      <!-- OLED screensaver -->
      <action name="Execute">
        <command>/home/igor/arch/scripts/oled.sh</command>
      </action>
    </keybind>
    <keybind key="XF86Calculator">
      <!-- Logitech MX Keys S: Calculator button minimize all -->
      <action name="ToggleShowDesktop" />
    </keybind>
    <keybind key="W-S-M">
      <!-- Minimize all with Win+Shift+M -->
      <action name="ToggleShowDesktop" />
    </keybind>
    <keybind key="C-A-T">
      <action name="ToggleAlwaysOnTop" />
    </keybind>
    <keybind key="W-1">
      <action name="GoToDesktop"><to>1</to></action>
    </keybind>
    <keybind key="W-2">
      <action name="GoToDesktop"><to>2</to></action>
    </keybind>
    <keybind key="W-3">
      <action name="GoToDesktop"><to>3</to></action>
    </keybind>
    <keybind key="W-4">
      <action name="GoToDesktop"><to>4</to></action>
    </keybind>
    <!-- Legion 7: Brightness down -->
    <keybind key="W-F5">
      <action name="Execute">
        <command>doas /home/igor/arch/scripts/brightness.sh -1</command>
      </action>
    </keybind>
    <!-- Legion 7: Brightness up -->
    <keybind key="W-F6">
      <action name="Execute">
        <command>doas /home/igor/arch/scripts/brightness.sh 1</command>
      </action>
    </keybind>
    <!-- Logitech MX Keys S: Brightness down -->
    <keybind key="XF86MonBrightnessDown">
      <action name="Execute">
        <command>doas /home/igor/arch/scripts/brightness.sh -1</command>
      </action>
    </keybind>
    <!-- Logitech MX Keys S: Brightness up -->
    <keybind key="XF86MonBrightnessUp">
      <action name="Execute">
        <command>doas /home/igor/arch/scripts/brightness.sh 1</command>
      </action>
    </keybind>
  </keyboard>

  <mouse>
    <dragThreshold>1</dragThreshold>
    <doubleClickTime>500</doubleClickTime>
    <screenEdgeWarpTime>400</screenEdgeWarpTime>
    <screenEdgeWarpMouse>false</screenEdgeWarpMouse>

    <context name="Frame">
      <mousebind button="Middle" action="Drag">
        <action name="Move"/>
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>
      <mousebind button="W-Left" action="Drag">
        <action name="Resize"/>
      </mousebind>
    </context>

    <context name="Client">
      <mousebind button="Left" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>
      <mousebind button="Middle" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>
      <mousebind button="Right" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>
    </context>

    <context name="Desktop">
      <mousebind button="Left" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>
      <mousebind button="Right" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>
    </context>

  </mouse>

  <menu>
    <file>menu.xml</file>
    <hideDelay>200</hideDelay>
    <middle>no</middle>
    <submenuShowDelay>100</submenuShowDelay>
    <submenuHideDelay>400</submenuHideDelay>
    <showIcons>yes</showIcons>
    <manageDesktops>yes</manageDesktops>
  </menu>

  <applications>
    <application type="normal">
      <position force="yes">
        <x>center</x>
        <y>center</y>
        <monitor>mouse</monitor>
      </position>
    </application>
    <application name="*">
      <decor>no</decor>
    </application>
    <application name="gsimplecal">
      <position force="yes">
        <x>-0</x>
        <y>0</y>
        <monitor>mouse</monitor>
      </position>
    </application>
    <application name="qtextpad" type="normal">
      <maximized>yes</maximized>
    </application>
    <application name="conky">
      <skip_taskbar>yes</skip_taskbar>
    </application>
    <application name="termite">
      <size>
        <height>789</height>
        <width>1558</width>
      </size>
    </application>
    <!-- kvirc is just going crazy on scaled screens -->
    <application name="kvirc" type="normal">
      <size>
        <height>1200</height>
        <width>2400</width>
      </size>
    </application>
    <application name="kvirc" type="dialog">
      <position force="yes">
        <x>900</x>
        <y>500</y>
        <monitor>mouse</monitor>
      </position>
    </application>
    <application name="xfreerdp">
      <layer>above</layer>
    </application>
    <application class="VirtualBox*">
      <position force="yes">
        <x>center</x>
        <y>center</y>
        <monitor>mouse</monitor>
      </position>
    </application>
  </applications>

</openbox_config>
