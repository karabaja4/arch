<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                 file:///usr/share/openbox/menu.xsd">

	<menu id="root-menu" label="Openbox 3">

		<item label="terminal">
			<action name="Execute">
				<execute>xfce4-terminal</execute>
			</action>
		</item>
		
		<item label="chromium">
			<action name="Execute">
				<execute>chromium</execute>
			</action>
		</item>

		<item label="qtfm">
			<action name="Execute">
				<execute>qtfm</execute>
			</action>
		</item>

		<separator/>

		<item label="exit">
			<action name="Exit"/>
		</item>

		<item label="reboot">
			<action name="Execute">
				<execute>sudo reboot</execute>
			</action>
		</item>

		<item label="poweroff">
			<action name="Execute">
				<execute>sudo poweroff</execute>
			</action>
		</item>

	</menu>
</openbox_menu>
