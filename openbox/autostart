xdpyinfo | grep VNC > /dev/null
declare isvnc=$? # 0 ako je vnc

vnc () {
    # log
    echo "$(date): Started VNC" >> $HOME/.my.log

    # daemons
    xsettingsd -c /home/igor/arch/misc/xsettingsd &

    # bacgkround
    xsetroot -solid '#008080'

    # interface
    conky -c /home/igor/arch/misc/conkyrc-xh0 -d
    tint2 -c /home/igor/arch/misc/tint2rc &
}

desktop () {
    # log
    echo "$(date): Started Openbox" >> $HOME/.my.log

    # daemons
    xsettingsd -c /home/igor/arch/misc/xsettingsd &
    xcompmgr -a &

    # resolution and background
    /home/igor/arch/scripts/fixres.sh
    feh --bg-scale /home/igor/arch/wall/default.jpg

    # conky
    sed 's/xinerama_head = 0/xinerama_head = 1/g' /home/igor/arch/misc/conkyrc-xh0 > /tmp/conkyrc-xh1
    sed 's/xinerama_head = 0/xinerama_head = 2/g' /home/igor/arch/misc/conkyrc-xh0 > /tmp/conkyrc-xh2
    conky -c /home/igor/arch/misc/conkyrc-xh0 -d
    conky -c /tmp/conkyrc-xh1 -d
    conky -c /tmp/conkyrc-xh2 -d

    # tray
    tint2 -c /home/igor/arch/misc/tint2rc &
    pnmixer &
    xfce4-clipman &
    (sleep 5 && flameshot) &

    # autolock
    #xautolock -time 60 -locker "systemctl suspend" -detectsleep &

    # vnc
    vncserver &
}

[ $isvnc -eq 0 ] || desktop
[ $isvnc -eq 0 ] && vnc