alias mountdisk="sudo mount -t ext4 /dev/sdc1 /home/igor/_disk/"
alias mountmmc="sudo mount /dev/mmcblk0p1 /home/igor/_mmc/"
alias mountazure="sudo mount -t cifs //igorsaric.file.core.windows.net/storage1 /home/igor/_azure -o vers=3.0,credentials=/etc/smbcredentials/igorsaric.cred,dir_mode=0777,file_mode=0777,serverino"
