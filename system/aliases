alias ls='LC_COLLATE=C ls -A -o -h --color=always --group-directories-first'

alias chx='chmod +x'
alias permof='stat --printf "%n - %a\n"'
alias sizeof='du -sh'
alias grep='grep --color'
alias df='df -h -T --total'
alias c='clear'
alias x='exit'

alias sr='screen -r'
alias sn='screen -S'

alias startx='nvidia-xrun'

mkmine() {
    if [ -n "$1" ]; then
        sudo chown -R ${USER}:${USER} $1
    else
        echo "No file defined."
    fi
}

gitpush() {
    git add .
    git commit -m "a"
    git push
}

gitreset() {
    git fetch origin
    git reset --hard origin/master
}

workwork() {
    # requires ppp_generic
    declare -r secret="$HOME/arch/scripts/secret.json"
    declare -r server="$(jq -r ".work.server" "$secret")"
    declare -r user="$(jq -r ".work.user" "$secret")"
    declare -r password="$(jq -r ".work.password" "$secret")"
    xfreerdp /cert-ignore /bpp:8 /network:modem /audio-mode:2 /multimon /floatbar:sticky:off /v:$server /u:$user /p:$password +compression +bitmap-cache
    # rdesktop -u Administrator -g 1680x1050 -z -x 0x80 -P -k hr -r sound:off 192.168.0.20
}

