bold=$(tput bold)
green=$(tput setaf 2)
gray=$(tput setaf 7)
reset=$(tput sgr0)
PS1='\w $(__git_ps1 "\[$gray\](%s)\[$reset\] ")\[$green\]\[$bold\]>>\[$reset\] '

