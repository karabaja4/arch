conky.config = {
	use_xft = true,
	font = 'Consolas:size=23',
	draw_shades = false,
	alignment = 'top_left',
	gap_x = 50,
	gap_y = 75,
	update_interval = 1,
	double_buffer = true,
	own_window = true,
	own_window_type = 'desktop',
	own_window_transparent = true,
	color0 = '#FFFFFF',
	xinerama_head = 0,
	color1 = '#00FF00',
	color2 = '#FFFF00',
	color3 = '#FF0000'
};

conky.text = [[
